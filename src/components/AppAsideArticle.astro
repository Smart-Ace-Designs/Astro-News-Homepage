---
interface Props {
  title: string;
  link: string;
  class: string;
}

const { title, link, class: className } = Astro.props;
---

<article class:list={[className]} class="flex flex-col gap-3 py-6">
  <a
    href={link}
    class="text-theme-off-white hover:text-theme-soft-orange text-[1.25rem] font-bold transition-colors delay-100"
  >
    <h2>{title}</h2>
  </a>
  <p class="text-theme-off-white/60 leading-relaxed"><slot /></p>
</article>
