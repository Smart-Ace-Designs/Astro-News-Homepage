---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  number: string;
  title: string;
  imagePath: string;
}

const { number, title, imagePath } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/*.{jpeg,jpg,png,gif}");
if (!images[imagePath])
  throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`);
---

<article class="flex gap-6">
  <div class="flex-shrink-0">
    <Image
      src={images[imagePath]()}
      alt={title}
      class="h-32 w-24 object-cover"
      loading="eager"
      format="webp"
    />
  </div>
  <div class="flex flex-col justify-between gap-2">
    <span class="text-theme-soft-red text-3xl font-bold">{number}</span>
    <h3
      class="text-theme-very-dark-blue hover:text-theme-soft-red cursor-pointer text-lg font-extrabold transition-colors delay-200"
    >
      {title}
    </h3>
    <p class="text-theme-dark-grayish-blue">
      <slot />
    </p>
  </div>
</article>
