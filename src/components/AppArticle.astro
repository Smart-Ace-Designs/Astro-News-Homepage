---
interface Props {
  number: string;
  title: string;
  image: string;
}

const { number, title, image } = Astro.props;
---

<article class="flex gap-6">
  <div class="flex-shrink-0">
    <img class="h-32 w-24 object-cover" src={image} alt={title} />
  </div>
  <div class="flex flex-col gap-2">
    <span class="text-theme-soft-red text-3xl font-bold">{number}</span>
    <h3
      class="text-theme-very-dark-blue hover:text-theme-soft-red cursor-pointer text-lg font-extrabold"
    >
      {title}
    </h3>
    <p class="text-theme-dark-grayish-blue">
      <slot />
    </p>
  </div>
</article>
